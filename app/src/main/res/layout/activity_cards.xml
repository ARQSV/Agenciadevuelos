<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ScrollViewCount"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:text="AVIANCA"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:cardCornerRadius="12dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="58dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="80dp"
                    app:srcCompat="@drawable/salidadelavion" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="64dp"
                    android:layout_height="61dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="-60dp"
                    app:srcCompat="@drawable/llegadadelavion" />

                <TextView
                    android:id="@+id/tituloCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Origen | Destino"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/precioCard1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Buscar"
                    android:backgroundTint="@color/black"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:padding="@dimen/cardview_default_elevation"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView1"
            android:layout_margin="16dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/guatemala"
                android:orientation="vertical"
                android:padding="16dp">


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/montado"
            android:layout_width="362dp"
            android:layout_height="180dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="550dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswaldo"
                    android:text="GUATEMALA"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="54dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="275dp"
                    android:layout_marginTop="-40dp"
                    app:srcCompat="@drawable/equipaje" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-25dp"
                    android:text="Siente la emocion del pais de guatemala"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofia2"
                    android:textSize="17dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswaldo"
                    android:text="USD 300"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="50dp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="-55dp"
                    android:backgroundTint="@color/white"
                    android:text="Reservar"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="16sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Vuelos baratos a todo el mundo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="750dp"
            android:fontFamily="@font/oswaldo"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_below="@id/titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/elsalvador"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswaldo"
                    android:text="EL SALVADOR"
                    android:textColor="@color/white"
                    android:layout_marginTop="80dp"
                    android:textSize="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswaldo"
                    android:text="Ver Disponibilidad"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_below="@id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/paris"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FRANCIA"
                    android:textColor="@color/white"
                    android:fontFamily="@font/oswaldo"
                    android:layout_marginTop="80dp"
                    android:textSize="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswaldo"
                    android:text="Ver Disponibilidad"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_below="@id/cardView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/china"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswaldo"
                    android:text="CHINA"
                    android:textColor="@color/white"
                    android:layout_marginTop="80dp"
                    android:textSize="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswaldo"
                    android:text="Ver Disponibilidad"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titulo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView5"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/oswaldo"
            android:text="Preparate para viajar"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_below="@id/titulo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="357dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:padding="16dp">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/terminado" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-80dp"
                    android:fontFamily="@font/oswaldo"
                    android:text="CHECK-IN ONLINE"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="271dp"
                    android:layout_height="61dp"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/oswaldo"
                    android:text="Obten tu pasa de abordar y ahora tiempo en el aeropuerto "
                    android:textSize="15dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_below="@id/cardView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="357dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:padding="16dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/buscar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-80dp"
                    android:fontFamily="@font/oswaldo"
                    android:text="CENTRO DE AYUDA"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="271dp"
                    android:layout_height="61dp"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/oswaldo"
                    android:text="Busca y encuentra informacion util para resolver tus preguntas"
                    android:textSize="15dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView8"
            android:layout_below="@id/cardView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="357dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:padding="16dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/pasaporte" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-80dp"
                    android:fontFamily="@font/oswaldo"
                    android:text="REQUISITOS PARA VIAJAR"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="271dp"
                    android:layout_height="61dp"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/oswaldo"
                    android:text="Informate acerca de visas,vacunas y emas documentos"
                    android:textSize="15dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/titulo5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView8"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sofia2"
            android:text="Te Contamos lo que pasa en nuestra empresa"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView9"
            android:layout_below="@id/titulo5"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/adentro"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia2"
                    android:text="VUELA EN CLASE EJECUTIVA Y ELEVA TU EXPERIENCIA"
                    android:textColor="@color/white"
                    android:textSize="22dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView10"
            android:layout_below="@id/cardView9"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/equipo"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia2"
                    android:text="VUELA EN CLASE EJECUTIVA Y ELEVA TU EXPERIENCIA"
                    android:textColor="@color/white"
                    android:textSize="22dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>
