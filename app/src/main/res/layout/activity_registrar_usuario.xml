<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/colores">

    <TextView
        android:id="@+id/tituloCard1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/sofia2"
        android:text="DREAM WORTHY TRAVELS"
        android:textAlignment="center"
        android:textSize="38sp" />




    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tituloCard1"
        android:layout_marginTop="12dp"
        android:background="@drawable/img_2"
        android:gravity="center" />

    <EditText
        android:id="@+id/editTextusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/borde"
        android:hint=" Username"
        android:drawableStart="@drawable/baseline_account_box_24"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextUseremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextusername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/borde"
        android:hint=" Email"
        android:drawableStart="@drawable/baseline_email_24"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/editTextpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUseremail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/borde"
        android:hint=" Password"
        android:drawableStart="@drawable/baseline_lock_24"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_regristrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/borde"
        android:text="Registrarse" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_regristrarse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="¿Ya tienes una cuenta?     Iniciar sesión"
        android:textColor="@color/white" />

</RelativeLayout>
