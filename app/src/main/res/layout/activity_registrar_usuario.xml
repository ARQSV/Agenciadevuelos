<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/fondo">




    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tituloCard1"
        android:layout_below="@id/gifImageView"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/oswaldo"
        android:textStyle="bold"
        android:text="BIENVENIDO A DMT"
        android:textAlignment="center"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/favor"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/tituloCard1"
        android:text="Por Favor Ingrese los Datos"
        android:textSize="17dp"
        android:fontFamily="@font/oswaldo">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_below="@id/tituloCard1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        android:layout_marginTop="50dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/borde"
                android:hint=" Username"
                android:drawableStart="@drawable/baseline_account_box_24"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/borde"
                android:hint=" Email"
                android:drawableStart="@drawable/baseline_email_24"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/borde"
                android:hint=" Password"
                android:drawableStart="@drawable/baseline_lock_24"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_registrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/black"
                android:text="Registrarse" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
